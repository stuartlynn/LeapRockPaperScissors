@import 'common'
@import 'nib'

@font-face 
  font-family StreetFighter
  src url(fonts/SSF4_ABUKET.ttf)


@keyframes bounce 
  0% 
    bottom : 0px
  16% 
    bottom : 100px
  32%   
    bottom : 0px
  50% 
    bottom: 100px
  66%
    bottom: 0px
  83%
    bottom: 100px
  100% 
    bottom: 0px

@keyframes shake 
  0% 
    left : 0px
  16% 
    left : 100px
  32%   
    left : -100px
  50% 
    bottom: 100px
  66%
    bottom: 0px
  83%
    bottom: 100px
  100% 
    bottom: 0px

html
  font-size 62.5%
  width: 100%
  height: 100%
  background-color: black
body
  color #333
  font 1.2em Helvetica, Arial
  width: 100%
  height: 100%
  font-family: StreetFighter, Helvetica

.fight
  width: 1000px 
  margin-left: auto
  margin-right: auto
  // border: 1px solid gray
  height: 700px
  margin-top: 20px
  position: relative
  .countdown
    position:absolute
    width: 1000px
    height: 700px
    background-color: rgba(0,0,0,0.7)
    
    z-index: 1
    

    h1
      text-align: center
      color: white
      cursor: pointer
      font-size: 100px
      margin-left: auto
      margin-right: auto
      margin-top: 250px
      padding: 0px
  .player 
    width: 49%
    display: inline-block
    padding:0px 
    margin: 0px
    border-box()
    vertical-align: top
    height: 100%
    position: relative
    z-index: 0
    h1
      margin-left: 10px
      color: #F9A90C
      font-family: StreetFighter, Helvetica
    .upper 
      width: 100%
      margin: 20px 0px 0px 10px
      padding: 0px
    .lifebar 
      width: 450px
      margin-left: auto
      margin-right:auto
      border: 1px solid gray
      background-color: #EF4001
      padding:0px
      margin:0px
      height: 20px
      position: relative
      .lifebarInner 
        background-color: #F0D804
        width: 100%
        padding:0px
        margin:0px
        height: 20px
        left: 0px
        position: absolute
        transition: all 1s ease-in-out
    .move 
      img 
        width: 400px
        padding: 0px
        margin: 0px
        margin-left: 30px
        margin-top: 100px
        position:relative
        &.bounce 
          animation-name: bounce
          animation-duration: 3s
        &.shake 
          animation-name: shake 
          animation-duration: 0.2s
          animation-iteration-count: 5
  .player2
    h1
      text-align: right
      margin-right: 50px
      color: #F9A90C
      font-family: StreetFighter, Helvetica
    .lifebar 
      .lifebarInner
        left: auto
        right: 0px
    .move
      img
        -webkit-transform: scaleX(-1)
        
  .vs
    background-color: #111F78
    color: white
    font-family: StreetFighter, Helvetica
    position : absolute
    width: 50px
    height: 50px
    left: 460px
    text-align: center
    top: 9px